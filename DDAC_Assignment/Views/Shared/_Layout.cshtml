

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")





    <style>
        .dropbtn {
            background-color: transparent;
            color: darkgray;
            padding: 16px;
            border: none;
            cursor: pointer;
        }

            .dropbtn:hover {
                background-color: red;
                color: blue;
            }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .caret {
            border-top: 4px solid white;
        }


        .dropdown:hover .dropbtn {
            color: white;
        }

        .dropdown-submenu {
            position: relative;
        }

            .dropdown-submenu .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -1px;
            }
    </style>
</head>
<body style="background-color:darkcyan">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container pull-left col-md-12 ">
            <div class="navbar-header col-md-2">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Maersk Line Southeast Asia", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
              

                    <div class="dropdown">
                        <button class="dropbtn">Cargo <span class="caret"></span></button>
                        <div class="dropdown-content">
                            <a tabindex="-1">@Html.ActionLink("View Cargo", "ViewCargo", "Home")</a>
                            <a tabindex="-1">@Html.ActionLink("Create New Cargo", "CreateCargo", "Home")</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <button class="dropbtn">Yard <span class="caret"></span></button>
                        <div class="dropdown-content">
                            <a tabindex="-1">@Html.ActionLink("View Yard", "ViewYard", "Home")</a>
                            <a tabindex="-1">@Html.ActionLink("Create New Yard", "CreateYard", "Home")</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <button class="dropbtn">Vessel <span class="caret"></span></button>
                        <div class="dropdown-content">
                            <a tabindex="-1">@Html.ActionLink("View Vessel", "ViewVessel", "Home")</a>
                            <a tabindex="-1">@Html.ActionLink("Create New Vessel", "CreateVessel", "Home")</a>
                        </div>
                    </div>



                    <div class="dropdown">
                        <button class="dropbtn">Schedule <span class="caret"></span></button>
                        <div class="dropdown-content">
                            <a tabindex="-1">@Html.ActionLink("View Schedule", "ViewSchedule", "Home")</a>
                            <a tabindex="-1">@Html.ActionLink("Create New Schedule", "CreateSchedule", "Home")</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <button class="dropbtn">Booking <span class="caret"></span></button>
                        <div class="dropdown-content">
                            <a tabindex="-1">@Html.ActionLink("New Booking", "NewBooking", "Home")</a>
                            <a tabindex="-1">@Html.ActionLink("Cancel Booking", "CancelBooking", "Home")</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <button class="dropbtn">More <span class="caret"></span></button>
                        <div class="dropdown-content">
                            <a>@Html.ActionLink("Home", "Index", "Home")</a>
                            <a tabindex="-1">@Html.ActionLink("About", "About", "Home")</a>
                            <a tabindex="-1">@Html.ActionLink("Contact", "Contact", "Home")</a>
                        </div>
                    </div>

               

                <ul class="pull-right nav navbar-nav">


                   
                    <li>@Html.ActionLink("Hi, " + User.Identity.Name, "Index", "UserProfile", routeValues: null, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Logout", "SignOut", "Account")</li>
                </ul>

             </div>
        </div>
       
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Maersk Group</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>
        $(document).ready(function () {
            $('.dropdown-submenu a.test').on("click", function (e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        });
    </script>

</body>
</html>
