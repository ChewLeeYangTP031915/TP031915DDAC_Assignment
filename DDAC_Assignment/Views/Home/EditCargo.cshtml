@model DDAC_Assignment.Models.Cargo
@{
    ViewBag.Title = "Edit Cargo";
}


@using (Html.BeginForm("EditCargo", "Home", FormMethod.Post, null))
{
    <div class="panel panel-primary">
        <label class="panel-heading"><h3>Edit Cargo</h3></label>

        <div class="panel-body">
            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoId,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoDeparture, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoDeparture, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoArrival, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoArrival, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoVolume, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoVolume, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </fieldset>
            <br />

            <input type="submit" value="Save Changes" class="btn btn-success">
        </div>
    
    </div>
            

            }
