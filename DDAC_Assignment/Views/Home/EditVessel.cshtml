@model DDAC_Assignment.Models.Vessel
@{
    ViewBag.Title = "Edit Vessel";
}


@using (Html.BeginForm("EditVessel", "Home", FormMethod.Post, null))
{
    <div class="panel panel-primary">
        <label class="panel-heading"><h3>Edit Vessel</h3></label>

        <div class="panel-body">
            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.vesselName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.vesselName,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.containers, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.containers, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.destinationYard, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.destinationYard, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.arrivalYard, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.arrivalYard, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </fieldset>
            <br />

            <input type="submit" value="Save Changes" class="btn btn-success">
        </div>
    </div>


}
