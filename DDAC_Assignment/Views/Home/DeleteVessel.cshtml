@model DDAC_Assignment.Models.Vessel
@{
    ViewBag.Title = "Delete Vessel";
}

<div class="panel panel-primary">
    <label class="panel-heading"><h3>Delete Vessel</h3></label>

    <div class="panel-body">

        @using (Html.BeginForm("DeleteVessel", "Home", FormMethod.Post, null))
        {

            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.vesselName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.vesselName,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.containers)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.containers,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.destinationYard)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.destinationYard,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.arrivalYard)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.arrivalYard,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
            </fieldset>
            <br />
            <p>Are you sure you want to delete this vessel?</p>

            <input type="submit" value="Yes" class="btn btn-primary">





        }
        <a class="btn btn-danger" href="/Home/ViewVessel">No</a>

    </div>

</div>