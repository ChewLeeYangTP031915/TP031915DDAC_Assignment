@model DDAC_Assignment.Models.Cargo
@{
    ViewBag.Title = "Delete Cargo";
}



@using (Html.BeginForm("DeleteCargo", "Home", FormMethod.Post, new { id = "submitForm" }))
{
    <div class="panel panel-primary">
        <label class="panel-heading"><h3>Delete Cargo</h3></label>

        <div class="panel-body">

            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoId,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoName,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoDeparture)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoDeparture,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoArrival)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoArrival,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.cargoVolume)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.cargoVolume,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
            </fieldset>
            <br />
            <p>Are you sure you want to delete this cargo?</p>
            <br />
            <button type="submit" class="btn btn-primary">Yes</button>

            }


            <a class="btn btn-danger" href="/Home/ViewCargo">No</a>
        </div>

    </div>

