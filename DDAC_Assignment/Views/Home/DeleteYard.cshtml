@model DDAC_Assignment.Models.Yard
@{
    ViewBag.Title = "Delete Yard";
}

<div class="panel panel-primary">
    <label class="panel-heading"><h3>Delete Yard</h3></label>

    <div class="panel-body">

        @using (Html.BeginForm("DeleteYard", "Home", FormMethod.Post, null))
        {

            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.yardName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.yardName,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.yardLocation)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.yardLocation,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.yardCountry)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.yardCountry,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
            </fieldset>
            <br />
            <p>Are you sure you want to delete this yard?</p>

            <input type="submit" value="Yes" class="btn btn-primary">





        }
        <a class="btn btn-danger" href="/Home/ViewYard">No</a>
    </div>

</div>