@model DDAC_Assignment.Models.Booking
@{
    ViewBag.Title = "Create Booking";
}


<div class="panel panel-primary">

    <label class="panel-heading"><h3>Create Booking</h3></label>

    <div class="panel-body">
        @using (Html.BeginForm("CreateBooking", "Home", FormMethod.Post, null))
            {
            <fieldset>
                <div class="editor-label">
                    <label for="bookingId">Booking Id</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.bookingId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="editor-label">
                    <label for="scheduleId">Schedule Id</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.scheduleId,
               new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                </div>
            </fieldset>
            <br />
                <p>
                    <input type="submit" value="Save Changes" class="btn btn-success">
                </p>
        }




